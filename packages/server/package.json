{
  "name": "@anthem/server",
  "version": "0.0.1",
  "private": true,
  "description": "GraphQL API server for Anthem",
  "author": "Chorus One Team",
  "main": "server.ts",
  "scripts": {
    "setup": "cp sample.env .env",
    "start": "nodemon --exec ts-node --files src/server.ts",
    "prod": "node build/src/server.js",
    "build": "rimraf build && tsc -p . && ncp src/schema build/src/schema",
    "debug": "yarn build && yarn rawkit build/src/server.js --nodemon",
    "prettier": "prettier --list-different './src/**/*.ts'",
    "prettier:fix": "prettier --write './src/**/*.{ts,json}'",
    "tslint": "tslint --project tsconfig.json -c tslint.json",
    "tslint:fix": "tslint --project tsconfig.json -c tslint.json --fix",
    "lint": "yarn prettier && yarn tslint",
    "format": "yarn prettier:fix && yarn tslint:fix",
    "tsc": "tsc",
    "test": "yarn lint && yarn tsc && yarn test:unit",
    "test:unit": "jest",
    "test:watch": "jest --watchAll",
    "jest:clear": "jest --clearCache",
    "types": "graphql-build --outputFile=./src/schema",
    "gql": "yarn gqlgen && chmod +x scripts/gql.sh && scripts/gql.sh",
    "gqlgen": "gql-lib --schemaFilePath ./src/schema/schema.graphql --destDirPath ./src/client/gql --depthLimit 10",
    "mocks:generate": "yarn mocks:responses && yarn query:keys",
    "mocks:generate:all": "yarn mocks:setup && RUN_ALL_MOCKS=true yarn mocks:responses && yarn query:keys",
    "mocks:recording": "RECORDING_API_MODE=true yarn start",
    "mocks:responses": "NODE_ENV=test ts-node -O '{\"module\": \"commonjs\"}' src/client/auto-query.ts",
    "mocks:setup": "rm -rf src/client/data && mkdir src/client/data",
    "price-history": "ts-node -O '{\"module\": \"commonjs\"}' scripts/price-history.ts && yarn format",
    "query:keys": "NODE_ENV=test ts-node -O '{\"module\": \"commonjs\"}' scripts/query-keys.ts && yarn format"
  },
  "dependencies": {
    "@anthem/utils": "^0.0.1",
    "apollo-server-express": "^2.7.2",
    "axios": "^0.19.0",
    "bech32": "^1.1.3",
    "chalk": "^2.4.2",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-prometheus-middleware": "^0.8.5",
    "getenv": "^0.7.0",
    "graphql": "^14.4.2",
    "moment-timezone": "^0.5.28",
    "ncp": "^2.0.0",
    "pg": "^7.17.1",
    "ramda": "^0.26.1",
    "sqlstring": "^2.3.1",
    "typescript": "3.5.3"
  },
  "devDependencies": {
    "@sentry/node": "5.6.1",
    "@types/bech32": "^1.1.1",
    "@types/compression": "^0.0.36",
    "@types/express": "^4.17.0",
    "@types/getenv": "^0.7.0",
    "@types/graphql": "^14.2.3",
    "@types/graphql-depth-limit": "^1.1.0",
    "@types/jest": "^24.0.15",
    "@types/js-levenshtein": "^1.1.0",
    "@types/moment-timezone": "^0.5.13",
    "@types/nock": "^10.0.3",
    "@types/node": "^12.6.8",
    "@types/pg": "^7.14.1",
    "@types/ramda": "^0.26.18",
    "@types/sqlstring": "^2.2.1",
    "gql-generator": "^1.0.12",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import": "^0.7.1",
    "graphql-import-node": "^0.0.4",
    "graphql-request": "^1.8.2",
    "jest": "^24.8.0",
    "nock": "^10.0.6",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "rawkit": "^1.5.0",
    "react-graphql-generator-helper-lib": "^0.0.34",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0"
  }
}
